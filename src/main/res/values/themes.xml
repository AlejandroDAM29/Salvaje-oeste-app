<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.PacMultimedia" parent="Theme.MaterialComponents.DayNight.DarkActionBar"></style>

    <!--Estilo de los botones de la actividad 1 y otros que sigan este patrón-->
    <style name="botones_activity_uno">
        <item name="android:background">@drawable/corner_color_boton</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/drift</item>
        <item name="android:textSize">@dimen/texto_boton</item>
    </style>


    <!--Estilo para los botones de música-->
    <style name="botones_musica" parent="botones_activity_uno">
        <item name="android:layout_height">@dimen/altura_maxima_botones_principal</item>
        <item name="android:textSize">@dimen/texto_musica</item>
    </style>


    <!--Estilo para los botones de la actividad de la base de datos-->
    <style name="botones_base_datos">
        <item name="android:rotation">-7</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/drift</item>
        <item name="android:textSize">@dimen/texto_boton_bases</item>
    </style>

</resources>